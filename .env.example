# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Settings
POSTGRES_DB=awsinventory
POSTGRES_USER=awsinventory
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://awsinventory:your-secure-database-password-here@db:5432/awsinventory

# AWS Credentials (Optional - can be provided via IAM roles or at runtime)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=us-east-1
AWS_REGIONS=us-east-1,us-west-2

# Django Superuser (Optional - for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password-here
DJANGO_SUPERUSER_EMAIL=admin@example.com

# Nginx Ports
HTTP_PORT=80
HTTPS_PORT=443
